<% layout('partials/_layout') -%>
<h1><%= artist.name %> </h1>
<table class="table-bordered">
  <tr>
    <td>Genre:</td>
    <td><%= artist.genre %></td>
  </tr>
  <tr>
    <td>Language:</td>
    <td><%= artist.language %></td>
  </tr>
  <tr>
    <td>Nationality:</td>
    <td><%= artist.nationality %></td>
  </tr>
  <tr>
    <td>Bio:</td>
    <td><%= artist.bio %></td>
  </tr>
  <tr>
    <td>Members:</td>
    <td><%= artist.members %></td>
  </tr>
  <tr>
    <td></td>
    <td><a href="<%= artist.wikipedia %>">Wikipedia</a></td>
  </tr>
  <tr>
    <td>Favorite?</td>
    <td class='fav' artistId='<%= artist._id %>'>
      <% if (artist.favorite) { %>
        <img src='../heart.png' artistId='<%= artist._id %>'/>
      <% } %>
    </td>
  </tr>
  <tr>
    <td><a href="edit"><button>Edit this Artist</button></a></td>
    <td><a href="/"><button>Back to Index</button></a></td>
  </tr>
  <tr>
    <td><a href="albums"><button>Albums by this Artist</button></a></td>
  </tr>
</table>

<script src="../../js/fav-clickhandler.js"></script>
